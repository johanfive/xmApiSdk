{
  "env": {
    "node": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Promise": "readonly"
  },
  "rules": {
    "brace-style": "error",
    "camelcase": "warn",
    "comma-dangle": ["error", "never"],
    "comma-spacing": "error",
    "eol-last": "warn",
    "eqeqeq": "error",
    "indent": ["error", 2],
    "key-spacing": "error",
    "linebreak-style": ["error", "unix"],
    "no-trailing-spaces": "error",
    "quotes": ["warn", "single"],
    "semi": ["error", "always"],
    "spaced-comment": "warn"
  },
  "overrides": [
    {
      "files": ["./index.js", "scripts/*.js", "src/*.test.js", "src/__mocks__/*"],
      "parserOptions": {
          "ecmaVersion": 2018
      }
    }
  ]
}